
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@model UpdateBookingDto


<h1>Rezervasyon Güncelleme Sayfası</h1>


<form  method="post">

    <input type="hidden"  asp-for="BookingID" />
    
    <label>Misafir Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />

    <label>Misafir Mail adresi</label>
    <input type="email" class="form-control" asp-for="Mail" />
    <br />

    <label>Misafir Giriş Tarihi</label>
    <input type="date" class="form-control" asp-for="Checkin" />
    <br />

    <label>Misafir Çıkış Tarihi</label>
    <input type="date" class="form-control" asp-for="CheckOut" />
    <br />

    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />

    <label>Ülke</label>
    <input type="text" asp-for="Country" class="form-control" />
    <br />

    <label>Durum</label>
    <input type="text" asp-for="Status" class="form-control" />
    <br />

    <label>Yetişkin sayısı</label>
    <input type="text" class="form-control" asp-for="AdultCount" />
    <br />

    <label>Çocuk sayısı</label>
    <input type="text" class="form-control" asp-for="ChildCount" />
    <br />

    <label>Oda sayısı</label>
    <input type="text" class="form-control" asp-for="RoomCount" />
    <br />

    <label>Özel İstekler</label>
    <textarea class="form-control" rows="5" asp-for="SpecialRequest"></textarea>
    <br />

    <label>Açıklama</label>
    <textarea class="form-control" rows="5" asp-for="Description"></textarea>
    <br />

    <button class="btn btn-primary">Rezervasyonu Güncelle</button>

</form>