
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>UpdateTestimonial</h1>

@model UpdateTestimonialViewModel



<form method="post">

    <input type="hidden" asp-for="TestimonialID"  />

    <label>Referans adı</label>
    <input type="text" asp-for="Name" class="form-control " />
    <br />

    <label>Referans Ünvanı</label>
    <input type="text" asp-for="Title" class="form-control " />
    <br />

    <label>Referans Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control " />
    <br />

    <label>Referans Resmi</label>
    <input type="text" asp-for="Image" class="form-control " />
    <br />

    

    <button class="btn btn-primary">Referans Güncelle</button>

</form>






